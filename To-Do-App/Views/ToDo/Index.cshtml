@model List<TaskModel>

<div class="container">
    <div class="row d-flex">
        <h1 class="col-10">My ToDo List:</h1>
        <div class="col-1 fs-1 d-flex justify-content-end"><i class="bi bi-filter-circle-fill align-self-end"></i></div>
        <div class="col-1 fs-1 d-flex justify-content-end"><i class="bi bi-plus-circle-fill"></i></div>
    </div>
</div>
<table class="table table-striped table-group-divider">
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td class="col-4">
                    <div class="container">
                        <div class="col">
                            <div class="row fs-3">
                                @obj.taskName
                            </div>
                            <div class="row">
                                @obj.dueDate
                            </div>
                            <div class="row">
                                @obj.category
                            </div>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-center col-4">
                    @obj.description
                </td>
                <td class="align-middle text-center col-2">
                    @obj.priorityLevel
                </td>
                <td class="align-middle col-1">
                    <div class="container text-end">
                        <div class="fs-2">
                            <i class="bi bi-pencil-square"></i>
                        </div>
                        <div class="fs-2">
                            <i class="bi bi-trash-fill"></i>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
